<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/susername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Username"
            android:textColor="#C2185B"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/slevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/susername"
            android:paddingStart="4dp"
            android:text="Level"
            android:textColor="#E2C2185B"
            android:typeface="serif" />

        <TextView
            android:id="@+id/ssubcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/susername"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:background="@drawable/status_round"
            android:text="Sub Category"
            android:textColor="#000000"
            android:typeface="serif" />

        <TextView
            android:id="@+id/scategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/susername"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/ssubcategory"
            android:background="@drawable/status_round"
            android:text="Category"
            android:textColor="#000000"
            android:typeface="serif" />

        <TextView
            android:id="@+id/sbody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/slevel"
            android:padding="4dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />

        <TextView
            android:id="@+id/statusheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sbody"
            android:padding="4dp"
            android:text="Status:"
            android:textColor="#C2185B"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sbody"
            android:layout_toRightOf="@id/statusheading"
            android:padding="4dp"
            android:textColor="#000000"
            android:text="checkStatus" />

        <TextView
            android:id="@+id/replyhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status"
            android:padding="4dp"
            android:text="Reply:"
            android:textColor="#C2185B"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status"
            android:layout_toEndOf="@id/replyhead"
            android:padding="4dp"
            android:textColor="#000000"
            android:text="Est velit egestas dui id ornare arcu. Tempor orci dapibus ultrices in."
            android:textSize="15sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>